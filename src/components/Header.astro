---
import Logo from '../components/Logo.astro';

const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'Borrowers', href: '/borrowers' },
  { linkText: 'Lenders', href: '/lenders' },
  { linkText: 'How It Works', href: '/how-it-works' },
  { linkText: 'Safety', href: '/safety' },
  { linkText: 'Contact', href: '/contact' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-8 border-b border-slate-800">
  <a href="/" class="flex items-center gap-2">
    <Logo />
    <span class="text-xl font-semibold tracking-wide"></span>
  </a>

  { !!navItems?.length && (
    <ul class="flex flex-wrap items-center gap-x-6 gap-y-2 text-slate-300 text-sm">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="hover:text-white transition-colors px-1.5 py-1 rounded"
          >
            {item.linkText}
          </a>
        </li>
      ))}
    </ul>
  )}
</nav>
