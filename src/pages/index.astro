
---
const featuresBorrower = [
  "Reach real people willing to lend, not just banks.",
  "Explain your situation in your own words.",
  "Negotiate repayment terms directly with lenders.",
];

const featuresLender = [
  "See real people and projects, not just numbers.",
  "Set your own interest rate and conditions.",
  "Chat with borrowers before you commit.",
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Amicbridge – Borrow and Lend Directly</title>
    <meta
      name="description"
      content="Amicbridge connects people who want to borrow money with people who want to lend – directly, person to person."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root {
        color-scheme: dark;
        --bg: #020617;
        --card: #020617;
        --accent: #22c55e;
        --accent-soft: #064e3b;
        --text: #e5e7eb;
        --muted: #9ca3af;
        --border: #1f2933;
      }
      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
          sans-serif;
        background: radial-gradient(circle at top, #0f172a 0, #020617 55%);
        color: var(--text);
      }
      .shell {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2.5rem 1.5rem 4rem;
      }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
      }
      .logo {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-weight: 600;
        letter-spacing: 0.04em;
      }
      .logo-mark {
        width: 26px;
        height: 26px;
        border-radius: 999px;
        background: radial-gradient(circle at 30% 20%, #4ade80, #16a34a);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        color: #022c22;
      }
      nav a {
        font-size: 0.9rem;
        color: var(--muted);
        text-decoration: none;
        margin-left: 1.2rem;
      }
      nav a.button {
        color: #022c22;
        background: var(--accent);
        padding: 0.45rem 0.95rem;
        border-radius: 999px;
        font-weight: 500;
      }
      .hero {
        display: grid;
        gap: 2rem;
        margin-top: 1rem;
      }
      @media (min-width: 800px) {
        .hero {
          grid-template-columns: minmax(0, 1.4fr) minmax(0, 1fr);
          align-items: center;
        }
      }
      h1 {
        font-size: clamp(2.3rem, 3vw + 1.2rem, 3.1rem);
        line-height: 1.05;
        margin-bottom: 1rem;
      }
      h1 span {
        color: var(--accent);
      }
      .hero-text {
        font-size: 1rem;
        color: var(--muted);
        max-width: 32rem;
        margin-bottom: 1.5rem;
      }
      .cta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
        margin-bottom: 1.2rem;
      }
      .btn {
        border-radius: 999px;
        padding: 0.6rem 1.4rem;
        border: 1px solid transparent;
        font-size: 0.98rem;
        font-weight: 500;
        cursor: pointer;
        background: transparent;
        color: var(--text);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
      .btn-primary {
        background: var(--accent);
        color: #022c22;
      }
      .btn-outline {
        border-color: var(--border);
      }
      .tiny-note {
        font-size: 0.78rem;
        color: var(--muted);
      }
      .card {
        background: rgba(15, 23, 42, 0.84);
        border-radius: 1.2rem;
        padding: 1.4rem 1.5rem;
        border: 1px solid rgba(148, 163, 184, 0.18);
        box-shadow: 0 18px 45px rgba(15, 23, 42, 0.9);
      }
      .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.75rem;
        padding: 0.2rem 0.7rem;
        border-radius: 999px;
        background: rgba(15, 118, 110, 0.18);
        color: #6ee7b7;
        margin-bottom: 0.7rem;
      }
      .pill-dot {
        width: 6px;
        height: 6px;
        border-radius: 999px;
        background: #4ade80;
      }
      .inline-label {
        font-size: 0.78rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--muted);
        margin-bottom: 0.2rem;
      }
      .input-row {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 0.7rem;
        margin-bottom: 0.7rem;
      }
      .fake-input {
        padding: 0.65rem 0.8rem;
        border-radius: 0.7rem;
        border: 1px solid rgba(148, 163, 184, 0.5);
        font-size: 0.84rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .fake-input span {
        color: var(--muted);
      }

      /* calculator inputs */
      .calc-field {
        background: transparent;
        border: none;
        color: var(--text);
        font-size: 0.9rem;
        text-align: right;
        width: 60%;
      }
      .calc-field::placeholder {
        color: var(--muted);
      }
      .calc-field:focus {
        outline: none;
      }

      .toggle-row {
        display: flex;
        gap: 0.6rem;
        margin-top: 0.6rem;
      }
      .toggle-chip {
        font-size: 0.76rem;
        border-radius: 999px;
        padding: 0.3rem 0.7rem;
        border: 1px solid rgba(148, 163, 184, 0.4);
        color: var(--muted);
      }
      .toggle-chip.active {
        border-color: var(--accent);
        background: rgba(34, 197, 94, 0.1);
        color: #bbf7d0;
      }
      .features {
        display: grid;
        gap: 1rem;
        margin-top: 3rem;
      }
      @media (min-width: 800px) {
        .features {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }
      .feature-card {
        border-radius: 1rem;
        border: 1px solid rgba(148, 163, 184, 0.25);
        background: radial-gradient(circle at top left, #0f172a, #020617);
        padding: 1.2rem 1.3rem 1.1rem;
      }
      .feature-card h2 {
        font-size: 1.1rem;
        margin-bottom: 0.4rem;
      }
      .feature-card ul {
        padding-left: 1.1rem;
        margin: 0.3rem 0 0.5rem;
        font-size: 0.86rem;
        color: var(--muted);
      }
      .feature-card li + li {
        margin-top: 0.25rem;
      }

      /* shared form styles */
      .borrow-form {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        margin-top: 0.8rem;
      }
      .borrow-row {
        display: grid;
        gap: 0.7rem;
      }
      @media (min-width: 700px) {
        .borrow-row {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }
      .borrow-input,
      .borrow-textarea {
        width: 100%;
        padding: 0.55rem 0.7rem;
        border-radius: 0.55rem;
        border: 1px solid rgba(148, 163, 184, 0.5);
        background: rgba(15, 23, 42, 0.8);
        color: var(--text);
        font-size: 0.9rem;
      }
      .borrow-input::placeholder,
      .borrow-textarea::placeholder {
        color: var(--muted);
      }
      .borrow-textarea {
        resize: vertical;
      }
      .borrow-submit {
        margin-top: 0.3rem;
        align-self: flex-start;
      }

      footer {
        margin-top: 2.5rem;
        font-size: 0.75rem;
        color: var(--muted);
        border-top: 1px solid rgba(30, 64, 175, 0.3);
        padding-top: 1rem;
      }
      footer strong {
        font-weight: 600;
      }
    </style>
  </head>

  <body>
    <div class="shell">
      <header>
        <div class="logo">
          <div class="logo-mark">A</div>
          <span>Amicbridge</span>
        </div>
        <nav>
          <a href="#how">How it works</a>
          <a href="#contact">Contact</a>
          <a href="#safety">Safety</a>
          <a class="button" href="#start">Get started</a>
        </nav>
      </header>

      <main>
        <section class="hero" id="start">
          <div>
            <h1>
              Borrow from people. <span>Lend to people.</span><br />
              One simple bridge.
            </h1>
            <p class="hero-text">
              Amicbridge connects people who want to
              <strong>borrow</strong> with people who want to
              <strong>lend</strong>. You agree the terms – we just help you
              find each other.
            </p>

            <div class="cta-row">
              <a href="#borrow-form" class="btn btn-primary">
                I want to borrow
              </a>
              <a href="#lend-form" class="btn btn-outline">
                I want to lend
              </a>
            </div>
            <p class="tiny-note">
              Accounts, messaging and full matching are coming soon. For now,
              you can join the early access list.
            </p>
          </div>

          <aside>
            <div class="card" id="loan-calculator">
              <div class="pill">
                <span class="pill-dot"></span>
                Live preview · Example match
              </div>

              <p class="inline-label">Borrower</p>

              <div class="fake-input">
                <span>Amount (€)</span>
                <input
                  id="calc-amount"
                  class="calc-field"
                  type="number"
                  min="0"
                  placeholder="2000"
                />
              </div>

              <div class="input-row">
                <div class="fake-input">
                  <span>Duration (months)</span>
                  <input
                    id="calc-duration"
                    class="calc-field"
                    type="number"
                    min="1"
                    placeholder="6"
                  />
                </div>
                <div class="fake-input">
                  <span>Interest rate (%)</span>
                  <input
                    id="calc-rate"
                    class="calc-field"
                    type="number"
                    step="0.1"
                    min="0"
                    placeholder="4.5"
                  />
                </div>
              </div>

              <p class="inline-label">Lender</p>
              <div class="fake-input">
                <span>Offer</span>
                <span id="calc-offer" style="font-weight: 500;">
                  €2,000 · 4.5% APR
                </span>
              </div>

              <p class="tiny-note" style="margin-top: 0.8rem;">
                Estimated monthly payment:
                <strong id="calc-monthly">€0</strong><br />
                Total to repay:
                <strong id="calc-total">€0</strong>
              </p>

              <div class="toggle-row">
                <span class="toggle-chip active">Personal loan</span>
                <span class="toggle-chip">Small business</span>
              </div>

              <p class="tiny-note" style="margin-top: 0.8rem;">
                Example only. This calculator is for illustration and does not
                represent a real offer.
              </p>
            </div>
          </aside>
        </section>

        <section class="features" id="how">
          <div class="feature-card">
            <h2>For borrowers</h2>
            <ul>
              {featuresBorrower.map((item) => <li>{item}</li>)}
            </ul>
          </div>
          <div class="feature-card">
            <h2>For lenders</h2>
            <ul>
              {featuresLender.map((item) => <li>{item}</li>)}
            </ul>
          </div>
        </section>

        <!-- Borrow form – Netlify form "borrow" -->
        <section id="borrow-form" class="features" style="margin-top: 3rem;">
          <div class="feature-card">
            <h2>Borrow money</h2>
            <p class="tiny-note">
              Fill in your details and we’ll receive your request.
            </p>

            <form
              name="borrow"
              method="POST"
              data-netlify="true"
              class="borrow-form"
            >
              <input type="hidden" name="form-name" value="borrow" />

              <div class="borrow-row">
                <input
                  class="borrow-input"
                  type="text"
                  name="name"
                  placeholder="Your name"
                  required
                />
                <input
                  class="borrow-input"
                  type="email"
                  name="email"
                  placeholder="Email"
                  required
                />
              </div>

              <div class="borrow-row">
                <input
                  class="borrow-input"
                  type="text"
                  name="phone"
                  placeholder="Phone number"
                  required
                />
                <input
                  class="borrow-input"
                  type="number"
                  name="amount"
                  placeholder="Amount you want to borrow (e.g. 2000)"
                  required
                />
              </div>

              <textarea
                class="borrow-textarea"
                name="reason"
                placeholder="Tell a bit about why you need this loan."
                rows="4"
                required
              ></textarea>

              <button type="submit" class="btn btn-primary borrow-submit">
                Send request
              </button>
            </form>
          </div>
        </section>

        <!-- Lend form – Netlify form "lend" -->
        <section id="lend-form" class="features" style="margin-top: 3rem;">
          <div class="feature-card">
            <h2>Lend money</h2>
            <p class="tiny-note">
              Tell us how much you want to lend and on what terms, and we’ll
              contact you.
            </p>

            <form
              name="lend"
              method="POST"
              data-netlify="true"
              class="borrow-form"
            >
              <input type="hidden" name="form-name" value="lend" />

              <div class="borrow-row">
                <input
                  class="borrow-input"
                  type="text"
                  name="name"
                  placeholder="Your name"
                  required
                />
                <input
                  class="borrow-input"
                  type="email"
                  name="email"
                  placeholder="Email"
                  required
                />
              </div>

              <div class="borrow-row">
                <input
                  class="borrow-input"
                  type="text"
                  name="phone"
                  placeholder="Phone number"
                  required
                />
                <input
                  class="borrow-input"
                  type="number"
                  name="amount"
                  placeholder="Amount you want to lend (e.g. 50000)"
                  required
                />
              </div>

              <div class="borrow-row">
                <input
                  class="borrow-input"
                  type="number"
                  step="0.1"
                  name="interest"
                  placeholder="Desired interest rate (%)"
                />
                <input
                  class="borrow-input"
                  type="text"
                  name="duration"
                  placeholder="Typical duration (e.g. 6–24 months)"
                />
              </div>

              <textarea
                class="borrow-textarea"
                name="notes"
                placeholder="Anything else we should know about your lending preferences."
                rows="4"
              ></textarea>

              <button type="submit" class="btn btn-primary borrow-submit">
                Send lending offer
              </button>
            </form>
          </div>
        </section>

        <!-- Contact -->
        <section id="contact" class="features" style="margin-top: 2rem;">
          <div class="feature-card">
            <h2>Contact</h2>
            <p><strong>CEO:</strong> Robert</p>
            <p><strong>Address:</strong> Oslo, Norway</p>
            <p><strong>Phone:</strong> 929 28 373</p>
          </div>
        </section>

        <footer id="safety">
          <p>
            <strong>Important:</strong> Amicbridge is a connection platform.
            We do not provide loans, hold money, or guarantee repayments.
            Always do your own checks and consult a professional if needed
            before lending or borrowing.
          </p>
        </footer>
      </main>
    </div>

    <!-- Calculator script -->
    <script>
      const amountInput = document.getElementById("calc-amount");
      const durationInput = document.getElementById("calc-duration");
      const rateInput = document.getElementById("calc-rate");
      const offerSpan = document.getElementById("calc-offer");
      const monthlySpan = document.getElementById("calc-monthly");
      const totalSpan = document.getElementById("calc-total");

      function updateCalc() {
        const amount = parseFloat(amountInput.value || "2000");
        const months = parseFloat(durationInput.value || "6");
        const rate = parseFloat(rateInput.value || "4.5");

        if (!amount || !months || !rate) {
          offerSpan.textContent = "€2,000 · 4.5% APR";
          monthlySpan.textContent = "€0";
          totalSpan.textContent = "€0";
          return;
        }

        const total = amount * (1 + (rate / 100) * (months / 12));
        const monthly = total / months;

        offerSpan.textContent = `€${amount.toFixed(0)} · ${rate.toFixed(
          1
        )}% APR`;
        monthlySpan.textContent = `€${monthly.toFixed(0)}`;
        totalSpan.textContent = `€${total.toFixed(0)}`;
      }

      [amountInput, durationInput, rateInput].forEach((el) => {
        el.addEventListener("input", updateCalc);
      });

      updateCalc();
    </script>
  </body>
</html>
