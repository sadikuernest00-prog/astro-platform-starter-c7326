    <!-- JS: loan calculator + live market -->
    <script>
      // ---------- Loan Calculator ----------
      const amt = document.getElementById("calc-amount");
      const months = document.getElementById("calc-months");
      const rate = document.getElementById("calc-rate");
      const monthlyEl = document.getElementById("calc-monthly");
      const totalEl = document.getElementById("calc-total");

      function updateCalc() {
        const A = parseFloat(amt.value || "0");
        const M = parseFloat(months.value || "0");
        const R = parseFloat(rate.value || "0");

        if (!A || !M || !R) {
          monthlyEl.textContent = "$0";
          totalEl.textContent = "$0";
          return;
        }

        const monthlyRate = (R / 100) / 12;
        const monthlyPayment =
          (A * monthlyRate) / (1 - Math.pow(1 + monthlyRate, -M));

        monthlyEl.textContent = "$" + monthlyPayment.toFixed(2);
        totalEl.textContent = "$" + (monthlyPayment * M).toFixed(2);
      }

      amt.addEventListener("input", updateCalc);
      months.addEventListener("input", updateCalc);
      rate.addEventListener("input", updateCalc);
      updateCalc();

      // ---------- Live Market (Gold, Silver, BTC, ETH, USD/NOK) ----------

      // ðŸ”‘ Replace this with your real MetalPriceAPI key (from metalpriceapi.com)
      const METAL_API_KEY = "PASTE_YOUR_REAL_KEY_HERE";

      const goldEl = document.getElementById("gold-price");
      const silverEl = document.getElementById("silver-price");
      const btcEl = document.getElementById("btc-price");
      const ethEl = document.getElementById("eth-price");
      const usdNokEl = document.getElementById("usd-nok");
      const nokUsdEl = document.getElementById("nok-usd");
      const updatedEl = document.getElementById("market-updated");

      async function fetchMetals() {
        if (
          !METAL_API_KEY ||
          METAL_API_KEY === "PASTE_YOUR_REAL_KEY_HERE"
        ) {
          goldEl.textContent = "Set API key";
          silverEl.textContent = "Set API key";
          return;
        }

        try {
          const url =
            "https://api.metalpriceapi.com/v1/latest" +
            "?api_key=" +
            encodeURIComponent(METAL_API_KEY) +
            "&base=USD&currencies=XAU,XAG";

          const res = await fetch(url);
          if (!res.ok) throw new Error("HTTP " + res.status);

          const data = await res.json();
          const rates = data.rates || {};
          const xau = rates.XAU;
          const xag = rates.XAG;

          if (xau) {
            const goldPrice = 1 / xau;
            goldEl.textContent = "$" + goldPrice.toFixed(2);
          } else {
            goldEl.textContent = "Unavailable";
          }

          if (xag) {
            const silverPrice = 1 / xag;
            silverEl.textContent = "$" + silverPrice.toFixed(2);
          } else {
            silverEl.textContent = "Unavailable";
          }
        } catch (err) {
          console.error("Metal price error:", err);
          goldEl.textContent = "Error";
          silverEl.textContent = "Error";
        }
      }

      async function fetchCrypto() {
        try {
          const res = await fetch(
            "https://api.coingecko.com/api/v3/simple/price?ids=bitcoin,ethereum&vs_currencies=usd"
          );
          if (!res.ok) throw new Error("HTTP " + res.status);
          const data = await res.json();
          const btc = data.bitcoin?.usd;
          const eth = data.ethereum?.usd;

          if (btc) {
            btcEl.textContent = "$" + btc.toLocaleString(undefined, {
              maximumFractionDigits: 0,
            });
          } else {
            btcEl.textContent = "Unavailable";
          }

          if (eth) {
            ethEl.textContent = "$" + eth.toLocaleString(undefined, {
              maximumFractionDigits: 0,
            });
          } else {
            ethEl.textContent = "Unavailable";
          }
        } catch (err) {
          console.error("Crypto price error:", err);
          btcEl.textContent = "Error";
          ethEl.textContent = "Error";
        }
      }

      async function fetchFX() {
        try {
          const res = await fetch("https://open.er-api.com/v6/latest/USD");
          if (!res.ok) throw new Error("HTTP " + res.status);
          const data = await res.json();
          const nokRate = data.rates?.NOK;

          if (nokRate) {
            usdNokEl.textContent = "1 USD â‰ˆ " + nokRate.toFixed(2) + " NOK";
            const inv = 1 / nokRate;
            nokUsdEl.textContent = inv.toFixed(4);
          } else {
            usdNokEl.textContent = "Unavailable";
            nokUsdEl.textContent = "Unavailable";
          }
        } catch (err) {
          console.error("FX error:", err);
          usdNokEl.textContent = "Error";
          nokUsdEl.textContent = "Error";
        }
      }

      async function loadMarket() {
        if (updatedEl) updatedEl.textContent = "Fetching dataâ€¦";
        await Promise.all([fetchMetals(), fetchCrypto(), fetchFX()]);
        if (updatedEl) {
          const now = new Date();
          updatedEl.textContent =
            "Last updated: " +
            now.toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" });
        }
      }

      loadMarket();
    </script>
